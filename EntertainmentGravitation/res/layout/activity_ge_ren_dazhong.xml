<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/blackcover"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="20dip" />

            <Button
                android:id="@+id/nav_back_view"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/icin_close" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/textView1"
                android:src="@drawable/icon_user" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio0"
                style="@style/routine_select_btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:drawableTop="@drawable/user_icon1"
                android:text="基本信息" />

            <RadioButton
                android:id="@+id/radio1"
                style="@style/routine_select_btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/user_icon2"
                android:text="相册管理" />

            <RadioButton
                android:id="@+id/radio2"
                style="@style/routine_select_btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/user_icon3"
                android:text="演艺经历" />

            <RadioButton
                android:id="@+id/radio3"
                style="@style/routine_select_btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:drawableTop="@drawable/user_icon4"
                android:text="外部链接" />

            <RadioButton
                android:id="@+id/radio4"
                style="@style/routine_select_btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/user_icon5"
                android:text="我的经纪" />

            <RadioButton
                android:id="@+id/radio5"
                style="@style/routine_select_btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/user_icon6"
                android:text="快递地址" />
            <RadioButton
                android:id="@+id/radio6"
                style="@style/routine_select_btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/user_icon6"
                android:text="意见反馈" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/billsViewPage"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blackcover"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="个人中心"
                    android:textColor="@color/white"
                    android:textSize="20dip" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/icin_close"
                    android:text="Button" />
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/RadioGroup01"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/RadioButton02"
                    style="@style/routine_select_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawableTop="@drawable/user_icon1"
                    android:text="基本信息" />

                <RadioButton
                    android:id="@+id/RadioButton01"
                    style="@style/routine_select_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_icon2"
                    android:text="相册管理" />

                <RadioButton
                    android:id="@+id/RadioButton04"
                    style="@style/routine_select_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_icon3"
                    android:text="演艺经历" />

                <RadioButton
                    android:id="@+id/RadioButton03"
                    style="@style/routine_select_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_icon4"
                    android:text="外部链接" />

                <RadioButton
                    android:id="@+id/RadioButton06"
                    style="@style/routine_select_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_icon5"
                    android:text="商务信息" />

                <RadioButton
                    android:id="@+id/RadioButton05"
                    style="@style/routine_select_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_icon6"
                    android:text="快递地址" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/ViewPager01"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                </android.support.v4.view.ViewPager>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>